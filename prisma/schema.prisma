generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id  Int @id @default(autoincrement())
  title String
  company String
  body String
  role Roles[]
  skill Skills[]
  duration String
  createdAt DateTime @default(now())
  expiresBy DateTime
  likesCount Int
  location  String
}

model Roles {
  id  Int @id @default(autoincrement())
  role String @unique
  roleInPost Project[]
}

model Skills {
  id  Int @id @default(autoincrement())
  skill String @unique
  skillInPost Project[] 
  skillInUser UserProfile[]
}

model User {
  id Int @id @default(autoincrement())
  username String? @unique
  email String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  gdprPolicy Boolean @default(false)
  role Role @default(USER)
  profile UserProfile? 
}

model UserProfile {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userEmail], references: [email])
  userEmail String
  firstName String?
  lastName String?
  birthday DateTime?
  phoneNumber Int?
  city String?
  country String?
  description String?
  skills Skills[]
}

model Company {
  id Int @id @default(autoincrement())
  name String? @unique
  email String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  gdprPolicy Boolean @default(false)
  companyProfile CompanyProfile?
}

model CompanyProfile {
  id Int @id @default(autoincrement())
  company Company @relation(fields: [companyEmail], references: [email])
  companyEmail String
  industry String?
  phoneNumber Int?
  employees String?
  description String?
  country String?
}

enum Role {
  USER
  ADMIN
}