// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id  Int @id @default(autoincrement())
  title String
  company String
  body String
  role Roles[]
  skill Skills[]
  duration String
  createdAt DateTime @default(now())
  expiresBy DateTime
  likesCount Int
}

model Roles {
  id  Int @id @default(autoincrement())
  role String
  roleInPost Post[]
}

model Skills {
  id  Int @id @default(autoincrement())
  skill String
  skillInPost Post[]
}